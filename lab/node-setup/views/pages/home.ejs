<%- include('../template/head')-%>

    <body class="container-lg">
        <div class="row m-5">
            <div class="col-sm text-center">
                <h1>
                    Welcome to the Riddle Game!
                </h1>
                <h2><em><%= selectedRiddle.Q %> </em></h2>
            </div>
        </div>
        <div class="row m-5">
            <div class="col-sm text-center">
                <input type="text" id="guessAnswer">
                <button id="answerButton" type="submit">Give it a Guess! Why not?</button>
            </div>
        </div>
        <% if ((guesses%5 == 0) && (guesses > 0)) { %>
         <%- include('../template/giveUp') -%> 
        <% } %>
        <% if (words.length > 0) { %>
        <div class="row m-5">
            <div class="col-sm text-center">
                <h3>Incorrect Guesses: <%= words.length %> </h3>
                <ul>
                    <% words.forEach(word => { %>
                    <li><%= word %> </li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <% } %>
        <script src="/action.js"></script>
    </body>
</html>